	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true,
